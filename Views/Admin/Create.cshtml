@model webtmdt.Data.HangHoa

@{
    Layout = "_AdminLayout";
}

<!-- Page Heading -->
<h1 class="h3 mb-2 text-gray-800">Create New HangHoa</h1>
<p class="mb-4">Create a new HangHoa</p>
<!-- End Page Heading -->

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="TenHh" class="control-label"></label>
        <input asp-for="TenHh" class="form-control" placeholder="Nhập tên" />
        <span asp-validation-for="TenHh" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TenAlias" class="control-label"></label>
        <input asp-for="TenAlias" class="form-control" placeholder="Nhập tên alias" />
        <span asp-validation-for="TenAlias" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MaLoai" class="control-label"></label>
        <select asp-for="MaLoai" class="form-control" asp-items="ViewBag.MaLoai"></select>
        <span asp-validation-for="MaLoai" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MoTaDonVi" class="control-label"></label>
        <input asp-for="MoTaDonVi" class="form-control" placeholder="Nhập mô tả đơn vị" />
        <span asp-validation-for="MoTaDonVi" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DonGia" class="control-label"></label>
        <input asp-for="DonGia" class="form-control" placeholder="Nhập đơn giá" />
        <span asp-validation-for="DonGia" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Hinh" class="control-label"></label>
        <input asp-for="Hinh" class="form-control" placeholder="Chọn ảnh" />
        <span asp-validation-for="Hinh" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="GiamGia" class="control-label"></label>
        <input asp-for="GiamGia" class="form-control" placeholder="Nhập giảm giá" />
        <span asp-validation-for="GiamGia" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SoLanXem" class="control-label"></label>
        <input asp-for="SoLanXem" class="form-control" placeholder="Nhập số lần xem" />
        <span asp-validation-for="SoLanXem" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MoTa" class="control-label"></label>
        <input asp-for="MoTa" class="form-control" placeholder="Nhập mô tả" />
        <span asp-validation-for="MoTa" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MaNcc" class="control-label"></label>
        <select asp-for="MaNcc" class="form-control" asp-items="ViewBag.MaNcc"></select>
        <span asp-validation-for="MaNcc" class="text-danger"></span>
    </div>

    <br>

    <button asp-action="Categories" class="btn btn-secondary btn-icon-split btn-md">
        <span class="icon text-white-30">
            <i class="fas fa-arrow-left"></i>
        </span>
        <span class="text">Back</span>
    </button>

    <button type="submit" class="btn btn-primary btn-icon-split btn-md">
        <span class="icon text-white-30">
            <i class="fas fa-plus"></i>
        </span>
        <span class="text">Create New HangHoa</span>
    </button>
</form>